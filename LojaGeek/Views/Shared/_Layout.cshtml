@using LojaGeek.Model.Utils

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Loja Geek</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">    
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Loja Geek", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>            
            <div id="navbar" class="navbar-collapse collapse">
                @if (LoginUtils.Admin == null)
                    {
                        if (LoginUtils.Cliente == null)
                        {
                            @Html.Partial("_MenuDefault")
                        }
                        else
                        {
                            @Html.Partial("_MenuLogado")
                        }
                    }
                    @if (LoginUtils.Admin != null)
                    {
                        @Html.Partial("_MenuAdministrativo")
                }
            </div>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@Html.ActionLink("©" + @DateTime.Now.Year+"- Loja Geek", "Index", "Administrativo")</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
